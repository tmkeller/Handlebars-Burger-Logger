<h1>BurgerPlace: The Place for Burgersâ„¢</h1>

<div class="fresh">
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burger-block devoured=true}}
            {{/if}}
        {{/each}}
    </ul>
</div>

<div class="devoured">
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burger-block devoured=false}}
            {{/unless}}
        {{/each}}
    </ul>
</div>

<h2>Make a burger!</h2>
<form class="create-form">
    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
    </div>

    <div class="form-group">
        <label for="dev">Devoured?</label>
        <input type="radio" name="devoured" value="0" checked>Uneaten<br>
        <input type="radio" name="devoured" value="1">Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>